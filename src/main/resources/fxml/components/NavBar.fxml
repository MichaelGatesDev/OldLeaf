<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>

<TabPane id="nav-tabs-pane"
         prefHeight="500.0"
         prefWidth="800.0"
         tabClosingPolicy="UNAVAILABLE"
         BorderPane.alignment="CENTER"
         xmlns="http://javafx.com/javafx/null"
         xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="com.michaelgatesdev.OldLeaf.gui.controllers.NavBarController">
    <tabs>
        <Tab id="tab-main"
             text="Main">
            <content>
                <fx:include source="../tabs/TabMain.fxml"/>
            </content>
        </Tab>
        <Tab id="tab-players"
             disable="true"
             text="Players">
            <content>
                <fx:include source="../tabs/TabPlayers.fxml"/>
            </content>
        </Tab>
        <Tab id="tab-map-editor"
             disable="true"
             text="Map Editor">
            <content>
                <fx:include source="../tabs/TabMapEditor.fxml"/>
            </content>
        </Tab>
        <Tab id="tab-villagers"
             disable="true"
             text="Villagers">
            <content>
                <fx:include source="../tabs/TabVillagers.fxml"/>
            </content>
        </Tab>
        <Tab id="tab-advanced"
             disable="true"
             text="Advanced">
            <content>
                <fx:include source="../tabs/TabAdvanced.fxml"/>
            </content>
        </Tab>
        <Tab id="tab-settings"
             disable="true"
             text="Settings">
            <content>
                <fx:include source="../tabs/TabSettings.fxml"/>
            </content>
        </Tab>
    </tabs>
</TabPane>
