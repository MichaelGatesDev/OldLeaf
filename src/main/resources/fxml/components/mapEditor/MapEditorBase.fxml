<BorderPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.michaelgatesdev.OldLeaf.gui.controllers.mapEditor.MapEditorController">

    <stylesheets>
    </stylesheets>

    <left>
        <!-- Left Item Select Panel -->
        <fx:include source="MapEditorItemsPanel.fxml"/>
    </left>

    <center>
        <BorderPane>
            <center>
                <ScrollPane fitToHeight="true" fitToWidth="true" nodeOrientation="LEFT_TO_RIGHT" prefWidth="600.0">
                    <content>
                        <StackPane fx:id="gridContainer" prefHeight="150.0" prefWidth="200.0"/>
                    </content>
                </ScrollPane>
            </center>
            <bottom>
                <!-- Bottom layers panel -->
                <fx:include source="MapEditorLayersPanel.fxml"/>
            </bottom>
        </BorderPane>
    </center>
</BorderPane>
